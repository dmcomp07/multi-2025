#!/bin/bash
# This file contains example environment variables
# Copy to .env and fill in actual values
# DO NOT commit .env to Git

# GCP Configuration
export GCP_PROJECT_ID="devops-hybrid-cloud"
export GCP_REGION="us-central1"
export GOOGLE_APPLICATION_CREDENTIALS="/path/to/terraform-key.json"

# AWS Configuration
export AWS_PROFILE="devops"
export AWS_REGION="us-east-1"
export AWS_ACCESS_KEY_ID="YOUR_KEY"
export AWS_SECRET_ACCESS_KEY="YOUR_SECRET"

# Azure Configuration
export AZURE_SUBSCRIPTION_ID="YOUR_SUBSCRIPTION_ID"
export AZURE_RESOURCE_GROUP="devops-rg"

# Database Configuration
export DB_HOST="production-rds.c5ijfx8ygxyz.us-east-1.rds.amazonaws.com"
export DB_USER="app_user"
export DB_PASSWORD="STRONG_PASSWORD_HERE"
export DB_NAME="applicationdb"

# Kubernetes Configuration
export KUBECONFIG="~/.kube/config"
export CLUSTER_NAME="hybrid-cloud-cluster"
export CLUSTER_NAMESPACE="production"

# Docker Registry
export DOCKER_REGISTRY="gcr.io"
export DOCKER_USERNAME="_json_key"
export DOCKER_PASSWORD="FROM_SERVICE_ACCOUNT_KEY"

# Slack/PagerDuty Configuration
export SLACK_WEBHOOK_URL="YOUR_WEBHOOK_URL"
export PAGERDUTY_KEY="YOUR_PAGERDUTY_KEY"

# Environment
export ENVIRONMENT="production"
export LOG_LEVEL="info"
